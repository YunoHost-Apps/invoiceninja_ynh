{
    "name": "InvoiceNinja",
    "id": "invoiceninja",
    "packaging_format": 1,
    "description": {
        "en": "Create and email invoices, track payments and expenses, and time tasks"
    },
    "version": "1.0~ynh1",
    "url": "https://invoiceninja.org",
    "license": "AAL",
    "maintainer": {
        "name": "Sebastian Gumprich",
        "email": "yunohost AT gumpri DOT ch",
        "url": "https://github.com/YunoHost-Apps/invoiceninja_ynh/"
    },
    "requirements": {
        "yunohost": ">= 3.5"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.0-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for ynhexample",
                    "fr": "Choisissez un nom de domaine pour ynhexample"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for ynhexample",
                    "fr": "Choisissez un chemin pour ynhexample"
                },
                "example": "/invoiceninja",
                "default": "/invoiceninja"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez lâ€™administrateur"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique?"
                },
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "en"
            }
        ]
    }
}
